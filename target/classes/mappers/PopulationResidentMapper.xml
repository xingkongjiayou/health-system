<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.csu.healthsystem.util.PopulationResidentDao">

    <!-- 结果映射 -->
    <resultMap id="PopulationResidentMap" type="org.csu.healthsystem.pojo.DO.PopulationResident">
        <result column="year"                property="year"/>
        <result column="resident_population" property="residentPopulation"/>
        <result column="urban_resident"      property="urbanResident"/>
        <result column="rural_resident"      property="ruralResident"/>
        <result column="urbanization_rate"   property="urbanizationRate"/>
    </resultMap>

    <sql id="dynamicWhere">
        <where>

            <!-- ===== year ===== -->
            <if test="p.yearEq  != null"> AND year =  #{p.yearEq}  </if>
            <if test="p.yearGt  != null"> AND year &gt;  #{p.yearGt}  </if>
            <if test="p.yearGte != null"> AND year &gt;= #{p.yearGte} </if>
            <if test="p.yearLt  != null"> AND year &lt;  #{p.yearLt}  </if>
            <if test="p.yearLte != null"> AND year &lt;= #{p.yearLte} </if>
            <if test="p.yearNotEq != null"> AND year != #{p.yearNotEq} </if>
            <if test="p.yearIn != null">
                AND year IN
                <foreach collection="p.yearIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.yearNotIn != null">
                AND year NOT IN
                <foreach collection="p.yearNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.yearLike != null">     AND year LIKE     #{p.yearLike}     </if>
            <if test="p.yearNotLike != null">  AND year NOT LIKE #{p.yearNotLike}  </if>
            <!-- ===== resident_population ===== -->
            <if test="p.resident_populationEq  != null"> AND resident_population =  #{p.resident_populationEq}  </if>
            <if test="p.resident_populationGt  != null"> AND resident_population &gt;  #{p.resident_populationGt}  </if>
            <if test="p.resident_populationGte != null"> AND resident_population &gt;= #{p.resident_populationGte} </if>
            <if test="p.resident_populationLt  != null"> AND resident_population &lt;  #{p.resident_populationLt}  </if>
            <if test="p.resident_populationLte != null"> AND resident_population &lt;= #{p.resident_populationLte} </if>
            <if test="p.resident_populationNotEq != null"> AND resident_population != #{p.resident_populationNotEq} </if>
            <if test="p.resident_populationIn != null">
                AND resident_population IN
                <foreach collection="p.resident_populationIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.resident_populationNotIn != null">
                AND resident_population NOT IN
                <foreach collection="p.resident_populationNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.resident_populationLike != null">     AND resident_population LIKE     #{p.resident_populationLike}     </if>
            <if test="p.resident_populationNotLike != null">  AND resident_population NOT LIKE #{p.resident_populationNotLike}  </if>

            <!-- ===== urban_resident ===== -->
            <if test="p.urban_residentEq  != null"> AND urban_resident =  #{p.urban_residentEq}  </if>
            <if test="p.urban_residentGt  != null"> AND urban_resident &gt;  #{p.urban_residentGt}  </if>
            <if test="p.urban_residentGte != null"> AND urban_resident &gt;= #{p.urban_residentGte} </if>
            <if test="p.urban_residentLt  != null"> AND urban_resident &lt;  #{p.urban_residentLt}  </if>
            <if test="p.urban_residentLte != null"> AND urban_resident &lt;= #{p.urban_residentLte} </if>
            <if test="p.urban_residentNotEq != null"> AND urban_resident != #{p.urban_residentNotEq} </if>
            <if test="p.urban_residentIn != null">
                AND urban_resident IN
                <foreach collection="p.urban_residentIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.urban_residentNotIn != null">
                AND urban_resident NOT IN
                <foreach collection="p.urban_residentNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.urban_residentLike != null">     AND urban_resident LIKE     #{p.urban_residentLike}     </if>
            <if test="p.urban_residentNotLike != null">  AND urban_resident NOT LIKE #{p.urban_residentNotLike}  </if>

            <!-- ===== rural_resident ===== -->
            <if test="p.rural_residentEq  != null"> AND rural_resident =  #{p.rural_residentEq}  </if>
            <if test="p.rural_residentGt  != null"> AND rural_resident &gt;  #{p.rural_residentGt}  </if>
            <if test="p.rural_residentGte != null"> AND rural_resident &gt;= #{p.rural_residentGte} </if>
            <if test="p.rural_residentLt  != null"> AND rural_resident &lt;  #{p.rural_residentLt}  </if>
            <if test="p.rural_residentLte != null"> AND rural_resident &lt;= #{p.rural_residentLte} </if>
            <if test="p.rural_residentNotEq != null"> AND rural_resident != #{p.rural_residentNotEq} </if>
            <if test="p.rural_residentIn != null">
                AND rural_resident IN
                <foreach collection="p.rural_residentIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.rural_residentNotIn != null">
                AND rural_resident NOT IN
                <foreach collection="p.rural_residentNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.rural_residentLike != null">     AND rural_resident LIKE     #{p.rural_residentLike}     </if>
            <if test="p.rural_residentNotLike != null">  AND rural_resident NOT LIKE #{p.rural_residentNotLike}  </if>

            <!-- ===== urbanization_rate ===== -->
            <if test="p.urbanization_rateEq  != null"> AND urbanization_rate =  #{p.urbanization_rateEq}  </if>
            <if test="p.urbanization_rateGt  != null"> AND urbanization_rate &gt;  #{p.urbanization_rateGt}  </if>
            <if test="p.urbanization_rateGte != null"> AND urbanization_rate &gt;= #{p.urbanization_rateGte} </if>
            <if test="p.urbanization_rateLt  != null"> AND urbanization_rate &lt;  #{p.urbanization_rateLt}  </if>
            <if test="p.urbanization_rateLte != null"> AND urbanization_rate &lt;= #{p.urbanization_rateLte} </if>
            <if test="p.urbanization_rateNotEq != null"> AND urbanization_rate != #{p.urbanization_rateNotEq} </if>
            <if test="p.urbanization_rateIn != null">
                AND urbanization_rate IN
                <foreach collection="p.urbanization_rateIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.urbanization_rateNotIn != null">
                AND urbanization_rate NOT IN
                <foreach collection="p.urbanization_rateNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="p.urbanization_rateLike != null">     AND urbanization_rate LIKE     #{p.urbanization_rateLike}     </if>
            <if test="p.urbanization_rateNotLike != null">  AND urbanization_rate NOT LIKE #{p.urbanization_rateNotLike}  </if>
        </where>
    </sql>

    <!-- ========== 动态查询 ========== -->
    <select id="selectByCondition"
            resultMap="PopulationResidentMap"
            parameterType="map">
        SELECT
        year,
        resident_population,
        urban_resident,
        rural_resident,
        urbanization_rate
        FROM population_resident
        <include refid="dynamicWhere"/>
        <if test="orderBy != null">
            ORDER BY ${orderBy}
        </if>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- ========== 统计总数 ========== -->
    <select id="countByCondition"
            parameterType="map"
            resultType="int">
        SELECT COUNT(1)
        FROM population_resident
        <include refid="dynamicWhere"/>
    </select>

</mapper>
