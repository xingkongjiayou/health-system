<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.csu.healthsystem.util.PopulationDeFactoDao">

    <!-- 结果映射 -->
    <resultMap id="PopulationBasicMap" type="org.csu.healthsystem.pojo.DO.PopulationDeFacto">
        <result column="year"             property="year"/>
        <result column="rural_population" property="ruralPopulation"/>
        <result column="urban_population" property="urbanPopulation"/>
    </resultMap>

    <sql id="dynamicWhere">
        <where>

            <!-- ===== year ===== -->
            <if test="p.yearEq  != null"> AND year =  #{p.yearEq}  </if>
            <if test="p.yearGt  != null"> AND year &gt;  #{p.yearGt}  </if>
            <if test="p.yearGte != null"> AND year &gt;= #{p.yearGte} </if>
            <if test="p.yearLt  != null"> AND year &lt;  #{p.yearLt}  </if>
            <if test="p.yearLte != null"> AND year &lt;= #{p.yearLte} </if>
            <if test="p.yearNotEq != null"> AND year != #{p.yearNotEq} </if>

            <if test="p.yearIn != null">
                AND year IN
                <foreach collection="p.yearIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.yearNotIn != null">
                AND year NOT IN
                <foreach collection="p.yearNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.yearLike != null">     AND year LIKE     #{p.yearLike}     </if>
            <if test="p.yearNotLike != null">  AND year NOT LIKE #{p.yearNotLike}  </if>


            <!-- ===== rural_population ===== -->
            <if test="p.rural_populationEq  != null"> AND rural_population =  #{p.rural_populationEq}  </if>
            <if test="p.rural_populationGt  != null"> AND rural_population &gt;  #{p.rural_populationGt}  </if>
            <if test="p.rural_populationGte != null"> AND rural_population &gt;= #{p.rural_populationGte} </if>
            <if test="p.rural_populationLt  != null"> AND rural_population &lt;  #{p.rural_populationLt}  </if>
            <if test="p.rural_populationLte != null"> AND rural_population &lt;= #{p.rural_populationLte} </if>
            <if test="p.rural_populationNotEq != null"> AND rural_population != #{p.rural_populationNotEq} </if>

            <if test="p.rural_populationIn != null">
                AND rural_population IN
                <foreach collection="p.rural_populationIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.rural_populationNotIn != null">
                AND rural_population NOT IN
                <foreach collection="p.rural_populationNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.rural_populationLike != null">     AND rural_population LIKE     #{p.rural_populationLike}     </if>
            <if test="p.rural_populationNotLike != null">  AND rural_population NOT LIKE #{p.rural_populationNotLike}  </if>

            <!-- ===== urban_population ===== -->
            <if test="p.urban_populationEq  != null"> AND urban_population =  #{p.urban_populationEq}  </if>
            <if test="p.urban_populationGt  != null"> AND urban_population &gt;  #{p.urban_populationGt}  </if>
            <if test="p.urban_populationGte != null"> AND urban_population &gt;= #{p.urban_populationGte} </if>
            <if test="p.urban_populationLt  != null"> AND urban_population &lt;  #{p.urban_populationLt}  </if>
            <if test="p.urban_populationLte != null"> AND urban_population &lt;= #{p.urban_populationLte} </if>
            <if test="p.urban_populationNotEq != null"> AND urban_population != #{p.urban_populationNotEq} </if>

            <if test="p.urban_populationIn != null">
                AND urban_population IN
                <foreach collection="p.urban_populationIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.urban_populationNotIn != null">
                AND urban_population NOT IN
                <foreach collection="p.urban_populationNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.urban_populationLike != null">     AND urban_population LIKE     #{p.urban_populationLike}     </if>
            <if test="p.urban_populationNotLike != null">  AND urban_population NOT LIKE #{p.urban_populationNotLike}  </if>
        </where>
    </sql>

    <!-- ========== 动态查询 ========== -->
    <select id="selectByCondition"
            resultMap="PopulationBasicMap"
            parameterType="map">
        SELECT
        year,
        rural_population,
        urban_population
        FROM population_urban_rural
        <include refid="dynamicWhere"/>
        <if test="orderBy != null">
            ORDER BY ${orderBy}
        </if>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- ========== 统计总数 ========== -->
    <select id="countByCondition"
            parameterType="map"
            resultType="int">
        SELECT COUNT(1)
        FROM population_urban_rural
        <include refid="dynamicWhere"/>
    </select>

</mapper>
