<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.csu.healthsystem.util.PopulationGenderDao">

    <!-- 结果映射 -->
    <resultMap id="PopulationDeFactoMap" type="org.csu.healthsystem.pojo.DO.PopulationGender">
        <id     column="id"               property="id"/>
        <result column="year"             property="year"/>
        <result column="male_population"   property="malePopulation"/>
        <result column="female_population" property="femalePopulation"/>
        <result column="gender_ratio"      property="genderRatio"/>
    </resultMap>

    <sql id="dynamicWhere">
        <where>

            <!-- ===== year ===== -->
            <if test="p.yearEq  != null"> AND year =  #{p.yearEq}  </if>
            <if test="p.yearGt  != null"> AND year &gt;  #{p.yearGt}  </if>
            <if test="p.yearGte != null"> AND year &gt;= #{p.yearGte} </if>
            <if test="p.yearLt  != null"> AND year &lt;  #{p.yearLt}  </if>
            <if test="p.yearLte != null"> AND year &lt;= #{p.yearLte} </if>
            <if test="p.yearNotEq != null"> AND year != #{p.yearNotEq} </if>

            <if test="p.yearIn != null">
                AND year IN
                <foreach collection="p.yearIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.yearNotIn != null">
                AND year NOT IN
                <foreach collection="p.yearNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.yearLike != null">     AND year LIKE     #{p.yearLike}     </if>
            <if test="p.yearNotLike != null">  AND year NOT LIKE #{p.yearNotLike}  </if>
            <!-- ===== male_population ===== -->
            <if test="p.male_populationEq  != null"> AND male_population =  #{p.male_populationEq}  </if>
            <if test="p.male_populationGt  != null"> AND male_population &gt;  #{p.male_populationGt}  </if>
            <if test="p.male_populationGte != null"> AND male_population &gt;= #{p.male_populationGte} </if>
            <if test="p.male_populationLt  != null"> AND male_population &lt;  #{p.male_populationLt}  </if>
            <if test="p.male_populationLte != null"> AND male_population &lt;= #{p.male_populationLte} </if>
            <if test="p.male_populationNotEq != null"> AND male_population != #{p.male_populationNotEq} </if>

            <if test="p.male_populationIn != null">
                AND male_population IN
                <foreach collection="p.male_populationIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.male_populationNotIn != null">
                AND male_population NOT IN
                <foreach collection="p.male_populationNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.male_populationLike != null">     AND male_population LIKE     #{p.male_populationLike}     </if>
            <if test="p.male_populationNotLike != null">  AND male_population NOT LIKE #{p.male_populationNotLike}  </if>


            <!-- ===== female_population ===== -->
            <if test="p.female_populationEq  != null"> AND female_population =  #{p.female_populationEq}  </if>
            <if test="p.female_populationGt  != null"> AND female_population &gt;  #{p.female_populationGt}  </if>
            <if test="p.female_populationGte != null"> AND female_population &gt;= #{p.female_populationGte} </if>
            <if test="p.female_populationLt  != null"> AND female_population &lt;  #{p.female_populationLt}  </if>
            <if test="p.female_populationLte != null"> AND female_population &lt;= #{p.female_populationLte} </if>
            <if test="p.female_populationNotEq != null"> AND female_population != #{p.female_populationNotEq} </if>

            <if test="p.female_populationIn != null">
                AND female_population IN
                <foreach collection="p.female_populationIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.female_populationNotIn != null">
                AND female_population NOT IN
                <foreach collection="p.female_populationNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.female_populationLike != null">     AND female_population LIKE     #{p.female_populationLike}     </if>
            <if test="p.female_populationNotLike != null">  AND female_population NOT LIKE #{p.female_populationNotLike}  </if>

            <!-- ===== gender_ratio ===== -->
            <if test="p.gender_ratioEq  != null"> AND gender_ratio =  #{p.gender_ratioEq}  </if>
            <if test="p.gender_ratioGt  != null"> AND gender_ratio &gt;  #{p.gender_ratioGt}  </if>
            <if test="p.gender_ratioGte != null"> AND gender_ratio &gt;= #{p.gender_ratioGte} </if>
            <if test="p.gender_ratioLt  != null"> AND gender_ratio &lt;  #{p.gender_ratioLt}  </if>
            <if test="p.gender_ratioLte != null"> AND gender_ratio &lt;= #{p.gender_ratioLte} </if>
            <if test="p.gender_ratioNotEq != null"> AND gender_ratio != #{p.gender_ratioNotEq} </if>

            <if test="p.gender_ratioIn != null">
                AND gender_ratio IN
                <foreach collection="p.gender_ratioIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.gender_ratioNotIn != null">
                AND gender_ratio NOT IN
                <foreach collection="p.gender_ratioNotIn" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="p.gender_ratioLike != null">     AND gender_ratio LIKE     #{p.gender_ratioLike}     </if>
            <if test="p.gender_ratioNotLike != null">  AND gender_ratio NOT LIKE #{p.gender_ratioNotLike}  </if>
        </where>
    </sql>

    <!-- ========== 动态查询 ========== -->
    <select id="selectByCondition"
            resultMap="PopulationDeFactoMap"
            parameterType="map">
        SELECT
        year,
        male_population,
        female_population,
        gender_ratio
        FROM population_urban_rural
        <include refid="dynamicWhere"/>
        <if test="orderBy != null">
            ORDER BY ${orderBy}
        </if>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- ========== 统计总数 ========== -->
    <select id="countByCondition"
            parameterType="map"
            resultType="int">
        SELECT COUNT(1)
        FROM population_urban_rural
        <include refid="dynamicWhere"/>
    </select>

</mapper>
